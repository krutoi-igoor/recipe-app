// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "windows"]
}

model Recipe {
  id          Int     @id @default(autoincrement())
  userId      Int
  title       String
  description String?
  ingredients String  // JSON array stored as text
  instructions String // JSON array stored as text
  servings    Int?
  prepTime    Int?    // minutes
  cookTime    Int?    // minutes
  tags        String? // comma-separated or JSON
  imageUrl    String?
  
  // Enhancement fields
  rating      Int?    // 1-5 star rating (average of all ratings)
  ratingCount Int     @default(0) // number of times rated
  userNotes   String? // personal notes about recipe
  sourceUrl   String? // where recipe was imported from
  sourceType  String? // 'url', 'social', 'image', 'manual'
  difficulty  String? // 'easy', 'medium', 'hard'
  
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  mealPlans   MealPlan[]
  collectionRecipes CollectionRecipe[]
  ratings     Rating[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
}

model MealPlan {
  id          Int     @id @default(autoincrement())
  userId      Int
  date        DateTime
  recipeId    Int?
  notes       String?
  servingSize Int     @default(1) // serving multiplier
  
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe      Recipe? @relation(fields: [recipeId], references: [id], onDelete: SetNull)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, date])
  @@index([userId, date])
  @@index([recipeId])
}

model Collection {
  id    Int    @id @default(autoincrement())
  userId Int
  name  String
  
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipes CollectionRecipe[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
}

model Rating {
  id        Int     @id @default(autoincrement())
  userId    Int
  recipeId  Int
  score     Int     // 1-5
  
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe    Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, recipeId])
  @@index([recipeId])
}

model SavedSearch {
  id        Int     @id @default(autoincrement())
  userId    Int
  name      String  // friendly name for search
  query     String  // search query JSON
  
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  username  String  @unique
  password  String
  firstName String?
  lastName  String?
  
  recipes       Recipe[]
  mealPlans     MealPlan[]
  collections   Collection[]
  ratings       Rating[]
  savedSearches SavedSearch[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CollectionRecipe {
  collectionId Int
  recipeId     Int
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  recipe       Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  
  @@id([collectionId, recipeId])
}
